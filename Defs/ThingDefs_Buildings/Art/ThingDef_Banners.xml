<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="BuildingBase" Name="O21_ST_BannerBase" Abstract="True">
		<description>Simple decorative banner, adds some modest beauty</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
            <drawSize>(2.5, 2.5)</drawSize>
		</graphicData>
		<uiIconScale>0.65</uiIconScale>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>200</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>10</Beauty>
		</statBases>
        <size>(1, 1)</size>
		<rotatable>false</rotatable>
		<useHitPoints>true</useHitPoints>
		<designationCategory>O21_ST_StarTrek</designationCategory>
		<passability>Standable</passability>
		<costList>
            <Steel>20</Steel>
		</costList>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
		<costStuffCount>50</costStuffCount>
	</ThingDef>
	
	<ThingDef ParentName="O21_ST_BannerBase">
		<defName>O21_ST_Banner_UE</defName>
		<label>banner (united earth)</label>
		<graphicData>
			<texPath>Things/Building/Federation/Decor/UE_Banner</texPath>
		</graphicData>
	</ThingDef>
	
	<ThingDef ParentName="O21_ST_BannerBase">
		<defName>O21_ST_Banner_UFOP</defName>
		<label>banner (federation)</label>
		<graphicData>
			<texPath>Things/Building/Federation/Decor/UFOP_Banner</texPath>
		</graphicData>
	</ThingDef>

</Defs>